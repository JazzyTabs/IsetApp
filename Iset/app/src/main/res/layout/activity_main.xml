<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <ImageView
        android:id="@+id/newImageRobot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:maxHeight="190dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:src="@drawable/new_image2" />

    <Button
        android:background="#1E90FF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:id="@+id/signup1"
        android:layout_below="@+id/newImageRobot"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="75dp" />

    <Button
        android:background="#FFBC00"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/login1"
        android:layout_below="@+id/signup1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

    <TextView
        android:textColor="#1E90FF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="WELCOME TO I-SET"
        android:id="@+id/welcome"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:maxHeight="80dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:src="@drawable/isetthabang"
        android:layout_alignBottom="@+id/newImageRobot"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
